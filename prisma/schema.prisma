generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String           @id @default(uuid())
  title      String
  created_at DateTime         @map("createdAp")
  dayHabits  DayHabit[]
  weekDays   HabitWeekDays[]
  deviceId   String
  device     Device           @relation(fields: [deviceId], references: [id])
  @@map("habits")
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String @map("habitId")
  week_day Int    @map("weekDay")
  habit    Habit  @relation(fields: [habit_id], references: [id])
  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day {
  id        String     @id @default(uuid())
  date      DateTime
  dayHabits DayHabit[]
  deviceId  String
  device    Device     @relation(fields: [deviceId], references: [id])
  @@unique([date, deviceId])
  @@map("days")
}

model DayHabit {
  id       String @id @default(uuid())
  day_id   String @map("dayId")
  habit_id String @map("habitId")
  deviceId String
  day      Day    @relation(fields: [day_id], references: [id])
  habit    Habit  @relation(fields: [habit_id], references: [id])
  @@unique([day_id, habit_id, deviceId])
  @@map("day_habits")
}

model Device {
  id     String @id @default(uuid())
  habits Habit[]
  days   Day[]
}
